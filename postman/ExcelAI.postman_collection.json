              "mode": "raw",
              "raw": "{\n  \"spreadsheet_id\": \"{{spreadsheetId}}\",\n  \"range\": \"{{range}}\",\n  \"values\": [[\"Hello\", \"World\"]],\n  \"access_token\": \"{{googleAccessToken}}\"\n}"
            }
