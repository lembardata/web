              { "key": "Authorization", "value": "Bearer {{authToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseServer}}/api/v1/sheets",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"{{sheetTitle}}\",\n  \"access_token\": \"{{googleAccessToken}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = pm.response.json();",
                  "if (data && data.spreadsheet_id) { pm.environment.set('spreadsheetId', data.spreadsheet_id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Info",
          "request": {
            "method": "GET",
